<?xml version='1.0' encoding='utf-8'?>
<widget id="fr.free.darken33.puzzle.drkslide" version="1.10" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <platform name="firefoxos">
        <icon height="128" src="icon/icon-128.png" width="128" />
        <icon height="60" src="icon/icon-60.png" width="60" />
    </platform>
    <feature name="Device">
        <param name="firefoxos-package" value="Device" />
    </feature>
    <feature name="Accelerometer">
        <param name="firefoxos-package" value="Accelerometer" />
    </feature>
    <feature name="Notification">
        <param name="firefoxos-package" value="Notification" />
    </feature>
    <permission name="systemXHR" privileged="true" />
    <name>drkSlide</name>
    <description>
        A 15-Puzzle game for smartphone.
    </description>
    <author email="darken33@free.fr" href="http://darken33.net/wp/index.php/2013/08/25/157/">
        Philippe Bousquet
    </author>
    <content src="index.html" />
    <access origin="*" />
</widget>
